<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="AccountWebService">
		<jta-data-source>java:jboss/datasources/groceryshop</jta-data-source>
		<class>stoll.quirin.model.Article</class>
		<class>stoll.quirin.model.Bill</class>
		<class>stoll.quirin.model.BillsPosition</class>
		<class>stoll.quirin.model.Client</class>
		<class>stoll.quirin.model.Clienttype</class>
		<class>stoll.quirin.model.Order</class>
		<class>stoll.quirin.model.OrdersPosition</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="hibernate.default_schema" value="groceryshop"/>
			<property name="hibernate.show_sql" value="true"/>
		</properties>
	</persistence-unit>
</persistence>
